@model IEnumerable<MVCHomeWork_1.Models.客戶聯絡人>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "客戶聯絡人";
}

<h2>客戶聯絡人</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (@Html.BeginForm("Index", "客戶聯絡人"))
    {
        <input type="search" name="keyword_info" value="" />
        <input type="submit" value="尋找" />
    }
</p>

@Html.PagedListPager(Model as IPagedList, (p) => Url.Action("Index", new { page = p }))

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶聯絡人", new { sort = "++", keyword_info = ViewBag.keyword_info})">筆劃多</a>
            @Html.DisplayNameFor(model => model.姓名)
            <a href="@Url.Action("Index", "客戶聯絡人", new { sort = "--", keyword_info = ViewBag.keyword_info})">筆劃少</a>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
